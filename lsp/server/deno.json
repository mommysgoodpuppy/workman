{
  "tasks": {
    "dev": "deno run --allow-all src/server.ts",
    "compile": "deno compile --allow-all --output=workman-lsp src/server.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.224.0/"
  },
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "strict": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
}