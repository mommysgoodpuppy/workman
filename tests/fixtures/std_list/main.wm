from "std/list" import { listRange, listMap, listFoldl, listReverse, listSortInt };

let square = (n) => {
  mul(n, n)
};

let foldAdd = match(tuple) {
  (acc, value) => { add(acc, value) }
};

export let sumSquares = () => {
  let numbers = listRange((1, 5));
  let squares = listMap((square, numbers));
  listFoldl((foldAdd, 0, squares))
};

export let reversedRange = () => {
  listReverse(listRange((1, 4)))
};

export let sortedDemo = () => {
  listSortInt(Cons(3, Cons(1, Cons(2, Nil))))
};
