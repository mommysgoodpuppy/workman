{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "workman",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#bindings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constructors"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#fields"
		},
		{
			"include": "#types"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double.wm",
					"match": "(?:--|//).*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.wm",
					"match": "\\b(if|else|match|from|import|export)\\b"
				},
				{
					"name": "keyword.declaration.wm",
					"match": "\\b(let|mut|rec|and|type|record|carrier|as|infix|infixl|infixr|prefix|infectious|domain|op|policy|annotate)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.wm",
					"match": "\\b(Int|Bool|Unit)\\b"
				},
				{
					"name": "entity.name.type.wm",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?!\\s*<)"
				}
			]
		},
		"constructors": {
			"patterns": [
				{
					"name": "entity.name.function.wm",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?=\\s*(<|\\())"
				}
			]
		},
		"bindings": {
			"patterns": [
				{
					"match": "\\b(let)\\s+(?:(rec)\\s+)?([a-z][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.declaration.wm"
						},
						"2": {
							"name": "keyword.declaration.wm"
						},
						"3": {
							"name": "variable.other.constant.wm"
						}
					}
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.wm",
					"match": "\\b[a-z][a-zA-Z0-9_]*\\b(?=\\s*=\\s*\\()"
				},
				{
					"name": "entity.name.function.wm",
					"match": "\\b[a-z][a-zA-Z0-9_]*\\b(?=\\s*\\()"
				}
			]
		},
		"fields": {
			"patterns": [
				{
					"name": "variable.object.property.wm",
					"match": "\\b[a-z][a-zA-Z0-9_]*\\b(?=\\s*:)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.wm",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.integer.wm",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arrow.wm",
					"match": "=>|->|="
				},
				{
					"name": "keyword.operator.type.wm",
					"match": ":|\\|"
				},
				{
					"name": "keyword.operator.wm",
					"match": "<=|>=|==|!=|&&|\\|\\||\\+\\+|--|\\*\\*|//|:>|\\+|-|\\*|/|%|<|>|!|&|\\^|~|#|\\$|\\?|\\.\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.wm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wm",
					"match": "\\\\."
				}
			]
		},
		"chars": {
			"name": "string.quoted.single.wm",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.wm",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.workman"
}
