-- Character classification using pattern matching
export let isDigit = match(c) => {
  '0' => { true },
  '1' => { true },
  '2' => { true },
  '3' => { true },
  '4' => { true },
  '5' => { true },
  '6' => { true },
  '7' => { true },
  '8' => { true },
  '9' => { true },
  _ => { false }
};

