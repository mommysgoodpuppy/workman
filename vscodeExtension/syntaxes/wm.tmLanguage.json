{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "workman",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#constructors"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-dash.wm",
					"match": "--.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.wm",
					"match": "\\b(let|rec|and|type|record|match|from|import|export|as)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.wm",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?!\\s*<)"
				},
				{
					"name": "support.type.primitive.wm",
					"match": "\\b(Int|Bool|Unit)\\b"
				}
			]
		},
		"constructors": {
			"patterns": [
				{
					"name": "entity.name.function.constructor.wm",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b(?=\\s*(<|\\())"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.wm",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.integer.wm",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arrow.wm",
					"match": "=>|->|="
				},
				{
					"name": "keyword.operator.type.wm",
					"match": ":|\\|"
				},
				{
					"name": "keyword.operator.wm",
					"match": "\\+|-|\\*|/|==|<|>|&&|\\|\\||!|\\.\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.wm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wm",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.workman"
}
